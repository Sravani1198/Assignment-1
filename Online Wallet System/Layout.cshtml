<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Wallet System</title>
    <link href="~/Content/Site.css" rel="stylesheet"type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="=stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <option style="height:100%; background-position:center;background-size:cover;
            url('@Url.Content("~/Image/mangpor2004170400113.jpg")')no-repeat left center;"></option>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Wallet System", "Home1", "HomePage", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add Money", "Login", "HomePage")</li>
                    @*<li>@Html.ActionLink("Check Balance", "Login", "HomePage")</li>
                    <li>@Html.ActionLink("Transfer", "Contact", "Home")</li>*@
                </ul>
                @*<ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Register","Register","Login",null,null)
                    </li>
                    <li>
                        @Html.ActionLink("Login","Login","HomePage",null,null)
                    </li>

                </ul>*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Wallet System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
